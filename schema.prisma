datasource db {
  url      = env("DB_CONNECTION_STRING")
  provider = "mysql"
}

generator client {
  provider = "prisma-client-js"
}

model UserAuth {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  username  String   @unique
  password  String
  tokens    AuthToken[]
}

model AuthToken {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  token     String   @unique
  tokenType String
  user      UserAuth @relation(fields: [userId], references: [id])
  userId    Int
}
